<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="ui.MainActivity">


    <TextView
        android:id="@+id/result_window"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:layout_marginTop="50dp"
        android:height="200dp"
        android:gravity="bottom|end"
        android:hint="@string/TextView_test"
        android:padding="12dp"
        android:shadowColor="@color/white"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:background="@color/white" />

    <!-- Выбрал то, что практичнее для задания -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:columnCount="4">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_last_figure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/remove_sign"
            android:textSize="11sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/clear"
            android:textSize="11sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_1"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_2"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_3"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_plus"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_4"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_5"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_6"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_minus"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_7"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_8"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_9"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_multiplication"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_dot"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_0"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_1"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/button_division"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_final_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="2dp"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            android:text="@string/equals"
            android:textSize="30sp" />

    </GridLayout>


</LinearLayout>